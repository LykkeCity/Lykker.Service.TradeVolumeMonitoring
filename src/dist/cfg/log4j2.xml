<Configuration>
    <Appenders>
        <Console name="ConsoleLog">
            <PatternLayout>
                <Pattern>%d{dd-MM HH:mm:ss:SSS} %p [%t] [%c{1}] %m%n</Pattern>
            </PatternLayout>
        </Console>

        <RollingRandomAccessFile name="ServerLog" filePattern="../log/server.log.%d{yyyy-MM-dd}"
                                 fileName="../log/server.log"
                                 immediateFlush="true">
            <PatternLayout>
                <Pattern>%d{dd-MM HH:mm:ss:SSS} %p [%t] [%c{1}] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingRandomAccessFile>
    </Appenders>
    <Loggers>
        <AsyncRoot level="debug" additivity="false">
            <AppenderRef ref="ConsoleLog"/>
        </AsyncRoot>

        <AsyncLogger name ="com.lykke.trade.volume.monitoring.service" level="info">
        </AsyncLogger>

        <AsyncLogger name ="org.apache.http" level="info">
        </AsyncLogger>

        <AsyncLogger name = "org.springframework" level="info">
        </AsyncLogger>
    </Loggers>
</Configuration>